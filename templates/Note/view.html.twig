{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.note_details'|trans({'%id%': note.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.note_details'|trans({'%id%': note.id|default('')}) }}</h1>
    {% if note is defined and note|length %}
        <dl class="dl-horizontal task-details">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ note.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ note.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ note.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{ note.title }}</dd>
            <dt>{{ 'label.comment'|trans }}</dt>
            <dd>{{ note.comment }}</dd>
            <dt>{{ 'label.user.author'|trans }}</dt>
            <dd>{{ note.author.email }}</dd>
        </dl>
        <div class="centered-container">
            <a class="create" href="{{ url('note_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'Powr√≥t'|trans }}
            </a>
        </div>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}
