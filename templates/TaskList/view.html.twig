{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.tasklist_details'|trans({'%id%': taskList.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.tasklist_details'|trans({'%id%': taskList.id|default('')}) }}</h1>
    {% if taskList is not null %}
        <dl class="dl-horizontal task-details">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ taskList.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ taskList.createdAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ taskList.updatedAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{ taskList.title }}</dd>
        </dl>
        <div class="centered-container">
            <a class="create" href="{{ url('tasklist_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'PowrÃ³t'|trans }}
            </a>
        </div>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}
